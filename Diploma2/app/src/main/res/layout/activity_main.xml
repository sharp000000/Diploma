<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl"
    tools:context="com.example.diploma.MainActivity">
    tools:openDrawer="start">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>
        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint = "Пошук"
            android:background="@drawable/back"
            android:layout_marginTop="10dp"
            android:clickable="false"
            />

        <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:id="@+id/plastic"
        android:text="Пластик"
            />
        <Button
            android:id="@+id/paper"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:layout_marginTop="-110dp"
            android:layout_marginRight="30dp"
            android:text="Папір"/>

        <Button
            android:id="@+id/metal"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Метал"/>

        <Button
            android:id="@+id/glass"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:layout_marginTop="-110dp"
            android:layout_marginRight="30dp"
            android:text="Скло"/>
        <Button
            android:id="@+id/wood"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Деревина"/>
        <Button
            android:id="@+id/clothes"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:layout_marginTop="-110dp"
            android:layout_marginRight="30dp"
            android:text="Одяг та взуття"/>
        <Button
            android:id="@+id/electronic"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Електроніка"/>
        <Button
            android:id="@+id/burn"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:layout_marginTop="-110dp"
            android:layout_marginRight="30dp"
            android:text="На спалювання"/>
        <Button
            android:id="@+id/nottaken"
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Не приймається"/>
            </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            app:menu_showShadow="true"
            app:menu_fab_label=""
            app:menu_openDirection="up"
            app:menu_backgroundColor="@android:color/transparent">
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Photo"
                app:fab_size="mini"
                android:id="@+id/fabphoto"
                android:src="@drawable/ic_photo_camera_black_24dp"/>
            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Bot"
                app:fab_size="mini"
                android:id="@+id/fabchat"
                android:src="@drawable/ic_chat_black_24dp"/>
        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nav">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>